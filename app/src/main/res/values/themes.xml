<resources>
    <!-- Base application theme. -->
    <style name="Theme.BaeminAOS" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray2</item>
        <item name="colorSecondaryVariant">@color/gray2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.BrandType" parent="">
        <item name="android:fontFamily">@font/brand_type_font</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.BrandType.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.BrandType.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Pretendard.SemiBold" parent="">
        <item name="android:fontFamily">@font/pretendard_semibold_font</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Pretendard.SemiBold.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Pretendard.SemiBold.H1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Pretendard.SemiBold.H2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Pretendard.SemiBold.H3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Pretendard.SemiBold.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Pretendard.SemiBold.Body3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Pretendard.SemiBold.Body4">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.Pretendard.Regular" parent="">
        <item name="android:fontFamily">@font/pretendard_regular_font</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Pretendard.Regular.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Pretendard.Regular.Body2">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Pretendard.Regular.Body3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Pretendard.Regular.Body4">
        <item name="android:textSize">10sp</item>
    </style>

    <!--  ImageView Style  -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <!-- Chips Style -->

    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="elevationOverlayEnabled">false</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/gray2</item>
        <item name="android:textAppearance">@style/TextAppearance.Pretendard.SemiBold.Body3</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>

    <style name="Widget.App.Chip.Choice.Basic" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="elevationOverlayEnabled">false</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Pretendard.SemiBold.Body3</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>

    <style name="Widget.App.Chip.Choice.Coupon" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="elevationOverlayEnabled">false</item>
        <item name="chipCornerRadius">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">#E9F8F8</item>
        <item name="android:textAppearance">@style/TextAppearance.Pretendard.SemiBold.Body3</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>


    <style name="Widget.App.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:singleLine">true</item>
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
        <item name="chipSpacingHorizontal">4dp</item>
    </style>


</resources>